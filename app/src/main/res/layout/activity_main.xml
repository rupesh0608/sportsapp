<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/corner_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:alpha="0.9"
        android:src="@drawable/login_corner_circle" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"/>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corner_radius_box"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home_grey" />

        <ImageView
            android:id="@+id/btnCasino"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_casino" />

        <ImageView
            android:id="@+id/btnBuySell"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_buy_sell_grey" />
        <ImageView
            android:id="@+id/btnLeaderBoard"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_leaderboard_grey" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_setting_grey" />
    </LinearLayout>
</RelativeLayout>