<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityFragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_black">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pixprt"
                android:textSize="18dp"
                android:paddingVertical="15dp"
                android:textFontWeight="700"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tabs"
            android:layout_below="@+id/toolbar"
            android:layout_marginVertical="7dp"
            android:layout_width="match_parent"
            android:paddingVertical="3dp"
            android:layout_height="wrap_content"
            android:background="@color/light_black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnFeed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_feed_grey" />

            <ImageView
                android:id="@+id/btnNewPost"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_add_grey" />

            <ImageView
                android:id="@+id/btnChat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_chat_grey" />
            <ImageView
                android:id="@+id/btnNotification"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_bell_grey" />
        </LinearLayout>
        <androidx.fragment.app.FragmentContainerView
            android:layout_marginTop="2dp"
            android:id="@+id/fragmentContainer1"
            android:layout_below="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
</FrameLayout>